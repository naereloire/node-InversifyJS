{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "outDir": "../out-tsc/spec",
      "module": "commonjs",
      "target": "es5",
      "types": [
        "node",
        "reflect-metadata",
        "jest"
      ],
      "typeRoots" : ["./node_modules/@types"],
      "allowJs": true,
      "sourceMap": false,
      "skipLibCheck": true
    },
    "include": [
      "**/*.spec.ts",
      "__tests__/__mocks__/**.ts",
      "__tests__/__fixtures__/**.ts"
    ],
    "exclude": [
      "node_modules/**",
      "./dist/**"
    ]
  }